{
    "manifest_version": 2,
    "name": "ChatGPT Sidebar",
    "version": "1.0",
    "description": "Loads ChatGPT in a sidebar",
    "permissions": [
        "activeTab"
    ],
    "sidebar_action": {
        "default_title": "ChatGPT",
        "default_panel": "sidebar.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Open ChatGPT"
    }
}